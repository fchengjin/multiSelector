multi-selector {
  display: block;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  min-height: 50rpx;
  position: relative;
  width: 100%;
  overflow: hidden;
}
.multi-selector{
  width: 100%;
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
